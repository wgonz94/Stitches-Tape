{
  "name": "stitches-and-tape-server",
  "version": "1.0.0",
  "description": "Back-end server for a measurement tracker for clothiers to store and track all the measurements needed to create custom items for their clientele.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "lint": "eslint --quiet .",
    "fix": "eslint --fix .",
    "test": "npm run lint && cross-env NODE_ENV=test mocha -u tdd --reporter spec --exit"
  },
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cli": "^1.0.1",
    "config": "^3.2.5",
    "cookie-parser": "^1.4.4",
    "describe": "^1.2.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.0",
    "express-session": "^1.17.0",
    "express-validator": "^6.4.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.8.4",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "concurrently": "^5.0.2",
    "cross-env": "^5.2.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "faker": "^4.1.0",
    "mocha": "^6.1.4",
    "nodemon": "^2.0.2",
    "prettier": "^1.17.1"
  }
}
